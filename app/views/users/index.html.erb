<p style="color: green"><%= notice %></p>
<div class="card">
      <div class="card-header">
        <h3>Users List</h3>
      </div>
      <div class="card-body mx-2">
        <%= link_to "New User", new_user_path(), class: "btn btn-primary" %>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">User Name</th>
                <th scope="col">Avatar</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                  <tr>
                      <td><%= user.id %></td>
                      <td><%= user.email %></td>
                      <td><%= user.user_name %></td>
                      <td><%= image_tag(user.avatar, size: "100x70") if user.avatar.present? %></td>
                      <td>
                        <%= link_to edit_user_path(user), class: "btn btn-primary" do %>
                          <%= icon('fa', 'pen')%>
                        <% end %>
                        <%= button_to user_path(user), method: :delete, data: { turbo_confirm: "Are you sure?" }, form: { class: 'd-inline-block' }, class: "btn btn-danger" do %>
                          <%= icon('fa', 'trash')%>
                        <% end %>
                      </td>
                  </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
